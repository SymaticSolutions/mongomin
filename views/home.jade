extends layout

block content
    md-content(flex)
        md-toolbar(class="md-whiteframe-glow-z1")
            div(class="md-toolbar-tools")
                md-button(class="md-icon-button", aria-label="Settings", ng-disabled="true")
                    md-icon(md-svg-icon="img/icons/menu.svg")
                h2
                    span Toolbar with Disabled/Enabled Icon Buttons

                span(flex)
                md-button(class="md-icon-button", aria-label="Favorite")
                    md-icon(md-svg-icon="img/icons/favorite.svg", style="{color:'greenyellow'}")
                md-button(class="md-icon-button", aria-label="More")
                    md-icon(md-svg-icon="img/icons/more_vert.svg")

        div(layout="column", layout-fill, layout-align="top center")
            p The left sidenav will 'lock open' on a medium (>=960px wide) device.
            p The right sidenav will focus on a specific child element.
            div
                md-button(ng-click="toggleLeft()", class="md-primary", hide-gt-md) Toggle left
            div
                md-button(ng-click="toggleRight()", ng-hide="isOpenRight()", class="md-primary") Toggle right
        div(flex)